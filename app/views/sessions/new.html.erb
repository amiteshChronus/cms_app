<% provide(:title, "Sign in")%>
<h1> Sign in </h1>

<div class=" form-actions">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <p><%= link_to "forgotten password?", new_password_reset_path, :class=> "forget_password" %></p>

      <%= f.submit "Sign in", class: "btn btn-large btn-info" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path ,:class=> "forget_password" %></p>
  </div>
</div>