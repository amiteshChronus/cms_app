<li>

    

	<%= link_to course.name, course, :class=> "large-heading, forget_password"%><br/>
    <span class="timestamp">Created: <%= time_ago_in_words(course.created_at) %> ago <br/></span>
    <% if !isProf? %>
        Instructor <%= link_to course.instructors.first.name,  user_path(:id=> course.instructors.first.id) %><br/>
    <%end %>
	<% if isProf? %>
        <div class="btn-group">
            <%= link_to students_course_path(course), :class => "btn btn-info" do %>
            Students
            <span class="badge"> <%=course.students.count%></span>
            <% end %>
            <%= link_to quizzes_course_path(:id => course.id), :class => "btn btn-info" do %>
             Quizzes
            <span class="badge"> <%=course.quizzes.count%></span>
            <% end %>
        
        <br/>
        <%= link_to 'Edit Course', edit_course_path(course),:class => "btn btn-info" %>
        <%= link_to 'Destroy Course' , course, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-info" %>
        </div>
    <%end%>
    <div class="btn-group">
    <% if isStudent? %>
        <% if current_user.registered?(course) %>
        
         <%= link_to students_course_path(course), :class => "btn btn-info" do %>
        Students
        <span class="badge"> <%=course.students.count%></span>
        <% end %>
        <%= link_to quizzes_course_path(:id => course.id), :class => "btn btn-info" do %>
        Quizzes
        <span class="badge"> <%=course.quizzes.count%></span>
        <% end %>
        </div>

        
        <%end%>
        <%= render 'register_form', :course => course  %>
    <% end %>

    
    
</li>

		

		
