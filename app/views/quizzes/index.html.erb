<% provide(:title, @title) %>
<h1>Listing quizzes</h1>


<table>

<% if @quizzesHash.empty? %>
  <h3> You don't have any quiz </h3>
<% else %>
   <% @quizzesHash.each do |course, quizzes| %>
    <h3> <%= course.name %> </h3>
    
    <% if isProf? %>
		<%= link_to 'New Quiz', new_quiz_path(:course_id=>course.id), method: :get , :class => "btn btn-info"%>
	<% end %>
    <ul class="courses">
    	<%= render quizzes%>
  	</ul>
     
    <% end %>
  <% end %>

</table>

<br />